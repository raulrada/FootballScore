<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="logo">
        <item name="android:layout_height">@dimen/logoHeight</item>
        <item name="android:layout_width">@dimen/logoWidth</item>
        <item name="android:layout_marginTop">@dimen/mTopLogo</item>
        <item name="android:layout_marginBottom">@dimen/mBottomLogo</item>
        <item name="android:layout_marginStart">@dimen/mStartLogo</item>
        <item name="android:layout_marginEnd">@dimen/mEndLogo</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text">
        <item name="android:layout_marginTop">@dimen/mTopText</item>
        <item name="android:layout_marginBottom">@dimen/mBottomText</item>
        <item name="android:layout_marginStart">@dimen/mStartText</item>
        <item name="android:layout_marginEnd">@dimen/mEndText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text.score">
        <item name="android:textColor">@color/colorScore</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
    </style>

    <style name="text.score.vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
